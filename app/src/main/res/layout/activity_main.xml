<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ambient Light Sensor"
            android:textColor="#2196F3" />

        <TextView
            android:id="@+id/multilineTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cover the ambient light sensor (Ususally housed in the front facing camera) to adjust illuminance"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:background="#ECECEC"
            android:textColor="#333"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="8dp"
            android:scrollbars="vertical"/>

        <TextView
            android:id="@+id/textView_sensorVal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:text="ILLUMINANCE: 1lx"
            android:textColor="#010E13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"
            android:text="Set Threshold Value:"
            android:textColor="#03A9F4" />

        <TextView
            android:id="@+id/textView_threshold"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:text="THRESHOLD: 1lx"
            android:textColor="#001119" />

        <SeekBar
            android:id="@+id/seekBar_threshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="1"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:paddingTop="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"
            android:text="Set Period:"
            android:textColor="#03A9F4" />

        <TextView
            android:id="@+id/textView_period"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:background="#BCB4B4"
            android:backgroundTint="#FFFEFE"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:text="PERIOD: 1 s"
            android:textColor="#000B10" />


        <SeekBar
            android:id="@+id/seekBar_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="1"
            android:paddingTop="30dp"
            android:padding="16dp"
            android:layout_margin="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>